@model UploadPictureViewModel
@{
    ViewData["Title"] = "UploadPicture";
}

<h2>UploadPicture</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Fishes" asp-action="UploadPicture">
    <!-- -->
    @Html.HiddenFor(item => item.Id)
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            @Html.TextBoxFor(m => m.PictureFile, new { type = "file", name = "PictureFile" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

